<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline';">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OAPLS - Home</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css">
  <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
	<style>
		@import "../styles/tailwind.css";
	</style>		
  <link rel="stylesheet" href="/global.css">
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">

  <nav class="bg-white border-b p-6">
    <div class="flex justify-between">
      <div>
        <a href="#" class="text-black no-underline">OAPLS</a>
      </div>
    </div>
  </nav>

  <div class="container mx-auto px-4">
    <h1 class="text-5xl font-bold mt-12 mb-4">Check how to comply with your funders’ Open Access policies</h1>
    <form id="funderForm">
      <label for="funderInput" class="block text-gray-700 text-sm font-bold mb-2">Enter the funder(s):</label>
      <select id="funderInput" class="block w-full p-2 border bg-white" multiple></select>
      <button type="submit" class="bg-gray-800 text-white font-bold py-2 px-4 rounded mt-4">CHECK</button>
    </form>
  </div>

  <footer class="bg-white border-t mt-12 p-6 text-center">
    Open Source • Community Controlled • Not for Profit
  </footer>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var choices = new Choices('#funderInput', {
        removeItemButton: true,
        maxItemCount: 2,
        searchResultLimit: 5,
        renderChoiceLimit: 5
      });

      choices.setChoices([
        {value: 'BMGF', label: 'Bill & Melinda Gates Foundation'},
        {value: 'NIH', label: 'National Institutes of Health'},
      ], 'value', 'label', false);

      document.getElementById('funderForm').onsubmit = function(event) {
        event.preventDefault();
        const values = choices.getValue(true); // Get simple values

        let targetUrl = 'index.html'; // Default to home if no match
        const hasBMGF = values.includes("BMGF");
        const hasNIH = values.includes("NIH");

        if (hasBMGF && hasNIH) {
          targetUrl = 'bmgf-nih.html';
        } else if (hasBMGF) {
          targetUrl = 'bmgf.html';
        } else if (hasNIH) {
          targetUrl = 'nih.html';
        }
        window.location.href = targetUrl;
      };
    });
  </script>
</body>
</html>
